package com.gmail.cfretz244;

import org.bukkit.Material;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.event.Listener;
import org.bukkit.inventory.Inventory;
import org.bukkit.inventory.ItemStack;
import org.bukkit.plugin.java.JavaPlugin;

public final class Spleefer extends JavaPlugin implements Listener {
	@Override
	public void onEnable() {
		getLogger().info("Spleefer Loaded");
	}
	
	@Override
	public void onDisable() {
		
	}
	
	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		if(sender instanceof Player) {
			Player player = (Player) sender;
			if(cmd.getName().toLowerCase().equals("spleefsetup")) {
				Inventory playerInv = player.getInventory();
				boolean needsToBeReplaced = true;
				int chosenSlot = -1;
				for(int i = 0; i < 36; i++) {
					ItemStack stack = playerInv.getItem(i);
					if(stack == null) {
						player.sendMessage("Invetory Slot " + (i + 1) + " is open.");
						if(chosenSlot == -1) {
							chosenSlot = i;
						}
					} else {
						Material stacktype = stack.getType();
						if(stacktype.getId() == 32) {
							player.sendMessage("Invetory Slot " + (i + 1) + " is a dead bush.");
							needsToBeReplaced = false;
							chosenSlot = i;
						}
					}
				}
				if(chosenSlot != -1) {
					
				}
				player.sendMessage("The chosen slot is: " + (chosenSlot + 1) + " and it's replacement status is: " + needsToBeReplaced);
				
			}
		} else {
			sender.sendMessage("Sender must be a player");
		}
		return false;
	}
	
}
